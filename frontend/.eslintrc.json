{
  "extends": [
    "eslint:recommended",
    "plugin:@next/next/recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "env": {
    "jest/globals": true,
    "browser": true,
    "es6": true,
    "node": true,
    "jest": true
  },
  "plugins": ["react", "@next/next", "@typescript-eslint", "jest"],
  "rules": {
    "semi": ["error", "always"],
    "@typescript-eslint/no-explicit-any": [
      "error",
      { "ignoreRestArgs": false }
    ],
    "import/order": "off"
  }
}
